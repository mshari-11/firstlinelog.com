# First Line Logistics - Environment Configuration Template
# نموذج إعدادات البيئة - فيرست لاين لوجستيكس

# =============================================================================
# Database & Infrastructure - قاعدة البيانات والبنية التحتية
# =============================================================================

# PostgreSQL (AWS RDS) - $120/month
# قاعدة بيانات جداول آمنة وقوية
DATABASE_URL=postgresql://user:password@your-rds-endpoint.amazonaws.com:5432/firstline_db
DATABASE_HOST=your-rds-endpoint.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=firstline_db
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_SSL=true

# AWS ElastiCache (Redis) - $40/month
# ذاكرة مؤقتة سريعة للأداء العالي
REDIS_URL=redis://your-elasticache-endpoint.amazonaws.com:6379
REDIS_HOST=your-elasticache-endpoint.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_TLS=true

# AWS Elasticsearch - $65/month
# محرك بحث ذكي للبيانات والتقارير
ELASTICSEARCH_URL=https://your-elasticsearch-domain.amazonaws.com
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elastic_password
ELASTICSEARCH_INDEX=firstline_logs

# AWS S3 (File Storage) - $25/month
# خزانة رقمية آمنة للملفات والصور
AWS_S3_BUCKET=firstline-documents
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_ENCRYPTION=AES256

# AWS SQS/SNS - $15/month
# نظام توزيع الرسائل والإشعارات
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/account/firstline-queue
AWS_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:account:firstline-notifications

# =============================================================================
# Backend Services - خدمات الخادم
# =============================================================================

# Node.js + Express Configuration
NODE_ENV=production
PORT=3000
API_BASE_URL=https://api.fll.sa

# GraphQL Apollo Server
GRAPHQL_ENDPOINT=/graphql
GRAPHQL_PLAYGROUND=false
GRAPHQL_INTROSPECTION=false

# AWS ECS Fargate - $125/month
# سيرفر في السحابة يشتغل 24/7
ECS_CLUSTER_NAME=firstline-cluster
ECS_SERVICE_NAME=firstline-api
ECS_TASK_DEFINITION=firstline-api:latest

# =============================================================================
# AI Services - خدمات الذكاء الاصطناعي
# =============================================================================

# Claude 3 Opus - AI Assistant
# مساعد ذكي للرد على الاستفسارات والشكاوى
# IMPORTANT: Replace with your actual Claude API key from console.anthropic.com
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4096

# GPT-4 Turbo - $30/month
# ذكاء اصطناعي قوي للردود الذكية
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# =============================================================================
# Analytics & Monitoring - التحليلات والمراقبة
# =============================================================================

# DataDog Enterprise - $150/month
# مراقب شامل للنظام والأداء
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SITE=datadoghq.com

# Sentry Pro - $50/month
# متتبع الأخطاء في الكود
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Power BI Premium - $30/month
# لوحة تحكم احترافية للتقارير
POWERBI_WORKSPACE_ID=your_workspace_id
POWERBI_DATASET_ID=your_dataset_id
POWERBI_REPORT_ID=your_report_id

# Segment CDP - $100/month
# منصة تجميع البيانات
SEGMENT_WRITE_KEY=your_segment_write_key
SEGMENT_SOURCE_ID=your_segment_source_id

# =============================================================================
# Frontend Configuration - إعدادات الواجهة
# =============================================================================

# Domain Configuration
VITE_APP_NAME=First Line Logistics
VITE_APP_URL=https://www.fll.sa
VITE_APP_DOMAIN=fll.sa
VITE_SKYWORK_URL=https://firstlinelog.skywork.website/

# Cloudflare Enterprise - $200/month
# شبكة عملاقة لتوزيع الموقع وحمايته
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_ACCOUNT_ID=your_account_id

# =============================================================================
# Supabase Configuration
# =============================================================================

VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# Excel Upload Configuration - إعدادات رفع ملفات Excel
# =============================================================================

# Excel Processing
EXCEL_UPLOAD_PATH=/uploads/excel
EXCEL_MAX_FILE_SIZE=10485760
EXCEL_ALLOWED_EXTENSIONS=.xlsx,.xls,.csv
EXCEL_DAILY_IMPORT_ENABLED=true

# Finance & Accounting Approval
FINANCE_APPROVAL_REQUIRED=true
HR_APPROVAL_REQUIRED=true
VEHICLE_APPROVAL_REQUIRED=true

# =============================================================================
# Security & Authentication - الأمان والمصادقة
# =============================================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# OTP Configuration
OTP_EXPIRY=600
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=3

# Session Configuration
SESSION_SECRET=your_session_secret_key_change_in_production
SESSION_EXPIRY=86400

# =============================================================================
# Third-Party Services - خدمات طرف ثالث
# =============================================================================

# SMS/WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+966xxxxxxxxx

# Email Service
EMAIL_SERVICE_PROVIDER=aws-ses
EMAIL_FROM=no-reply@fll.sa
EMAIL_SUPPORT=support@fll.sa

# =============================================================================
# Rate Limiting & Caching - تحديد المعدل والتخزين المؤقت
# =============================================================================

RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
CACHE_TTL=3600

# =============================================================================
# Logging - السجلات
# =============================================================================

LOG_LEVEL=info
LOG_FORMAT=json
LOG_TIMESTAMP=true
